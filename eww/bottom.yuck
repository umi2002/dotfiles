(defwindow bottom-center
           :monitor 0
           :geometry (geometry :x "0px"
                               :y "10px"
                               :anchor "bottom center")
           :stacking "fg"
           (eventbox :orientation "h"
                     :halign "center"
                     :onhover "bash ~/.config/eww/scripts/set-art.sh"
                     :onhoverlost "bash ~/.config/eww/scripts/set-art.sh"
                     (box :orientation "v"
                          :space-evenly false
                          :halign "center"
                          (revealer :orientation "h"
                                    :reveal art-visible
                                    :duration "100ms"
                                    :transition "slideup"
                                    (box :class "song-info"
                                         :orientation "h"
                                         :space-evenly false
                                         :halign "center"
                                         :width 400
                                         (song-art)
                                         (box :orientation "v"
                                              (album)
                                              (song-position)
                                              (song-progress)
                                         )
                                    )
                          )
                          (box :class "music-player"
                               :orientation "h"
                               :valign "start"
                               :space-evenly false
                               :width 500
                               :height 30
                               (prev-song);
                               (music);
                               (next-song);
                          )
                     )
           )
)

(deflisten album :initial "No song playing" "bash ~/.config/eww/scripts/get-album.sh")
(defwidget album []
  (label :class "album"
         :text "${album}"
  )
)

(defpoll song-position :interval "1s"
  "bash ~/.config/eww/scripts/get-progress.sh")
(defwidget song-position []
  (label :class "song-position"
         :text "${song-position}"
  )
)

(deflisten song-duration "bash ~/.config/eww/scripts/get-duration.sh")
(defpoll song-progress :interval "1s"
  `playerctl -p spotify position`)

(defwidget song-progress []
  (box :class "song-progress" :halign "center" :vexpand "false" :hexpand "false"
    (scale :orientation "h"
           :flipped false
           :value song-progress
           :min 0
           :max song-duration
           :width 200
           :onchange "playerctl -p spotify position {}%"
    )
  )
)

(deflisten music :initial "No song playing" "bash ~/.config/eww/scripts/get-song.sh")

(deflisten play-pause :initial " " "bash ~/.config/eww/scripts/get-play-pause.sh")

(defwidget music []
  (eventbox :onclick "bash ~/.config/eww/scripts/set-play-pause.sh"
            :hexpand true
            :halign "center"
            (label :text "${play-pause} ${music}"
                   :limit-width 30
                   :width 30
            )
  )
)

(defvar art-visible false)
(defvar song-path "/home/umi/.config/eww/scripts/temp.jpg")

(defwidget song-art []
  (image :path song-path
         :image-width 100
         :image-height 100
  )
)

(defwidget prev-song []
  (eventbox :onclick "playerctl -p spotify previous"
            :hexpand true
            :halign "start"
            (label :text " 󰙣 ")
  )
)

(defwidget next-song []
  (eventbox :onclick "playerctl -p spotify next"
            :hexpand true
            :halign "end"
            (label :text " 󰙡 ")
  )
)

(defwindow volume
           :monitor 0
           :geometry (geometry :x "550px"
                               :y "10px"
                               :anchor "bottom right")
           :stacking "fg"
           (eventbox :orientation "h"
                     :halign "center"
                     :onhover "bash ~/.config/eww/scripts/set-volume-slider.sh"
                     :onhoverlost "bash ~/.config/eww/scripts/set-volume-slider.sh"
                     (box :orientation "v"
                          :space-evenly false
                          (volume-revealer)
                          (volume)
                     )
           )
)

(defwidget volume-revealer []
  (revealer :transition "slideup"
            :reveal volume-visible
            :duration "100ms"
            (box :class "volume-slider" :halign "center" :vexpand "false" :hexpand "false"
                 (scale :orientation "v"
                        :flipped true
                        :value volume
                        :min 0
                        :max 100
                        :width 30
                        :height 200
                        :halign "center"
                        :onchange "amixer -q -D pulse sset Master {}%"
                )
            )
  )
)

(defvar volume-visible false)
(defvar muted false)

(deflisten volume :initial "30"
  "bash ~/.config/eww/scripts/get-volume.sh")

(defwidget volume []
  (eventbox
    :class "volume-text"
    :width 100
    :height 30
    :onclick "bash ~/.config/eww/scripts/set-mute.sh"
    :onmiddleclick "pavucontrol &"
    (label :text {muted ? "󰝟 ${volume}%" : "󰕾 ${volume}%"})
  )
)
